<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        /* Elimina el AddTax para agregar impuestos si no esta en estado draft */
        <record id="invoice_form_valente" model="ir.ui.view">
            <field name="name">account.invoice.form.valente</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_invoice_tax_wizard.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='_Add_Tax']" position="attributes">
                    <attribute name="states">draft</attribute>
                    <attribute name="string">Agregar Impuestos</attribute>
                </xpath>
            </field>
        </record>

        /* Elimina el AddTax para agregar impuestos si no esta en estado draft */
        <record id="invoice_supplier_form_valente" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.valente</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_invoice_tax_wizard.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='_Add_Tax']" position="attributes">
                    <attribute name="states">draft</attribute>
                    <attribute name="string">Agregar Impuestos</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>


